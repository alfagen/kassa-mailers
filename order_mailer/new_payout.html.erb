<div
  style="cursor:auto;color:#000;font-family:Arial, sans-serif;font-size:16px;line-height:1;">
  <h1><%= I18n.t('emails.new_tickets.title') %></h1>

  <p style="color: #000;"><%= I18n.t('emails.common.generic_hello') %></p>
  <br/>
  <p style="color: #000;">
    <%= I18n.t('emails.new_tickets_confirmation.outcome', amount: @order.outcome_money.format(symbol: @order.outcome_money.currency.to_s, format: '%n %u')) %>
    <br/>
  </p>
  <br/>
  <p style="color: #000;">
    <%= I18n.t('emails.new_tickets_confirmation.warning') %>
    <br/>
  </p>
  <br/>
  <p style="padding-bottom:8px;">
    <%= I18n.t('emails.new_tickets_confirmation.goto_link') %>
    <br/>
  </p>
  <table cellpadding="0" cellspacing="0" align="left" border="0">
    <tbody>
      <tr>
        <td style="border-radius:8px;color:#1c1c1c;cursor:auto;padding:16px 32px;"
          align="center" valign="middle" bgcolor="#ffd828">
          <a href="<%= confirm_public_order_url(id: @order.public_id, confirmation_hash: @order.confirmation_hash) %>"
            style="display:inline-block;text-decoration:none;background:#ffd828;border-radius:8px;color:#1c1c1c;font-family:Arial, sans-serif;font-size:19px;font-weight:bold;margin:0px;"
            target="_blank"
          >
            <%= I18n.t('emails.new_tickets_confirmation.button') %>
          </a>
        </td>
      </tr>
    </tbody>
  </table>

  <p style="clear: both;"></p>
</div>
