<div style="cursor:auto;color:#000000;font-family:Arial, sans-serif;font-size:16px;line-height:1;">
  <h1><%= I18n.t('emails.reserve_request_complete.title') %></h1>
  <p style="color: #000;">
    <%= I18n.t('emails.reserve_request_complete.hello').html_safe %>
    <br/>
    <br/>
    <%= I18n.t('emails.reserve_request_complete.complete_message', id: @reserve_request.id) %>
  </p>
  <br/>
  <br/>
  <b><%= I18n.t('emails.reserve_request_complete.request_info') %>:</b>
  <br/>
  <br/>
  <div
    style="background: #ecf0f6; display: inline-block; padding: 20px 0 20px 20px;width:96%;border-radius:5px">
    <table border="0">
      <tr>
        <td><%= I18n.t('emails.reserve_request_complete.payment_system') %>:</td>
        <td><%= @reserve_request.payment_system.name %></td>
      </tr>
      <tr>
        <td><%= I18n.t('emails.reserve_request_complete.amount') %>:</td>
        <td><%= @reserve_request.amount %></td>
      </tr>
    </table>
  </div>
  <br />
  <br />
  <table cellpadding="0" cellspacing="0" border="0">
    <tbody>
      <tr>
        <td style="border-radius:8px;color:#1c1c1c;cursor:auto;padding:16px 32px;"
          align="center" valign="middle" bgcolor="#ffd828">
          <a href="http://kassa.cc"
            style="display:inline-block;text-decoration:none;background:#ffd828;border-radius:8px;color:#1c1c1c;font-family:Arial, sans-serif;font-size:19px;font-weight:bold;margin:0px;"
            target="_blank"><%= I18n.t('emails.reserve_request_complete.link_text') %></a>
        </td>
      </tr>
    </tbody>
  </table>
  <p style="color: #000;">
    <%= I18n.t('emails.common.postscript').html_safe %>
  </p>
</div>
